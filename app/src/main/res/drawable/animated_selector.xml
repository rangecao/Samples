<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/normal" android:state_pressed="true" android:drawable="@color/colorAccent"></item>
    <item android:id="@+id/pressed" android:drawable="@color/colorPrimary"></item>
    <transition
        android:fromId="@+id/normal"
        android:toId="@+id/pressed"
        android:drawable="@drawable/transition" />
</animated-selector>